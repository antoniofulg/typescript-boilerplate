# Docker Compose Project Name
# Used to isolate multiple clones of the same repository
# Each clone should have a unique project name to avoid conflicts
# Copy this file to .env and customize
COMPOSE_PROJECT_NAME=app

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=4000
PRISMA_STUDIO_PORT=5555

# Frontend Configuration
FRONTEND_PORT=3000

# Host Aliases (for /etc/hosts)
FRONTEND_ALIAS=app.frontend.local
BACKEND_ALIAS=app.backend.local

